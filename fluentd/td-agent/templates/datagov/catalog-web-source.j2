<source>
  type tail
  format /^([^ ]*) (?<host>[^ ]*) [^ ]* (?<user>[^ ]*) \[(?<time>[^\]]*)\] "(?<method>\S+)(?: +(?<path>[^ ]*) +\S*)?" (?<code>[^ ]*) (?<size>[^ ]*)(?: "(?<referer>[^\"]*)" "(?<agent>[^\"]*)")?$/
  time_format %d/%b/%Y:%H:%M:%S %z
  path /var/log/apache2/ckan.custom.log
  pos_file /var/log/td-agent/ckan.access.log.pos
  tag "{{ system }}.apache.access"
</source>
<source>
  type tail
  format apache_error
  path /var/log/apache2/ckan.error.log
  pos_file /var/log/td-agent/ckan.error.log.pos
  tag "{{ system }}.apache.error"
</source>
